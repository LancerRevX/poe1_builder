{
    "root": true,
    "env": {
        "node": true
    },
    "extends": [
        "plugin:vue/essential",
        "plugin:jsonc/recommended-with-jsonc",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "vue/no-unused-components": "warn",
        "vue/script-indent": [
            "error",
            4,
            {
                "baseIndent": 1
            }
        ],
        "vue/html-indent": [
            "error",
            4,
            {
                "attribute": 1,
                "baseIndent": 1,
                "closeBracket": 0,
                "alignAttributesVertically": true,
                "ignores": []
            }
        ],

        "jsonc/indent": [
            "error",
            4
        ],

        "no-unused-vars": [
            "warn",
            {
                "argsIgnorePattern": "_"
            }
        ],
        "space-before-function-paren": [
            "error",
            {
                "anonymous": "never",
                "named": "never",
                "asyncArrow": "always"
            }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": "error",
        "camelcase": "error"
    }
}